{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@Assets/*": [
                "src/Assets/*"
            ],
            "@Interfaces/*": [
                "src/Interfaces/*"
            ],
            "@Interfaces": [
                "src/Interfaces"
            ],
            "@Router/*": [
                "src/Router/*"
            ],
            "@Router": [
                "src/Router"
            ],
            "@Services/*": [
                "src/Services/*"
            ],
            "@Store/*": [
                "src/Store/*"
            ],
            "@Store": [
                "src/Store"
            ],
            "@Scenes/*": [
                "scenes/*"
            ]
        }
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "tests",
        "index.js"
    ],
    "compileOnSave": false
}
